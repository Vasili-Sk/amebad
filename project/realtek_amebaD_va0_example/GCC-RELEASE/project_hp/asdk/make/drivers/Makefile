
include $(MAKE_INCLUDE_GEN)


.PHONY: all clean

#*****************************************************************************#
#                               VARIABLES	                              #
#*****************************************************************************#
DIR = $(BASEDIR)/component/common/drivers

#*****************************************************************************#
#                               Source FILE LIST                              #
#*****************************************************************************#
OBJS +=	

#*****************************************************************************#
#                               Include Dependency                            #
#*****************************************************************************#
-include $(OBJS:.o=.d)


#*****************************************************************************#
#                        RULES TO GENERATE TARGETS                            #
#*****************************************************************************#
all: 
	$(MAKE) CORE_TARGETS
	$(MAKE) COPY_RAM_OBJS
ifeq ($(CONFIG_INIC_EN),y)
	$(MAKE) -C inic all
endif
ifeq ($(CONFIG_USB_AUTOINSTALL_ENABLED),y)
	$(MAKE) -C usoc all
endif
	$(MAKE) -C si	all
	
	$(MAKE) -C ir  all

#*****************************************************************************#
#              GENERATE OBJECT FILE 
#*****************************************************************************#
CORE_TARGETS: $(OBJS)

#*****************************************************************************#
#              CLEAN GENERATED FILES                                          #
#*****************************************************************************#
clean: CLEAN_OBJS 
	$(REMOVE) *.o
	$(REMOVE) *.i
	$(REMOVE) *.s
	$(REMOVE) *.d
	$(MAKE) -C inic clean
	$(MAKE) -C usoc clean
	$(MAKE) -C si clean
	$(MAKE) -C ir clean

-include $(DEPS)
